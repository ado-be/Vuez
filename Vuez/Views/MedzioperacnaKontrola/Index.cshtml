@model IEnumerable<vuez.Models.ConfigurationSheet>

<h1>Medzioperačná kontrola konfiguračných listov</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="Create" class="btn btn-success">+ Nový konfiguračný list</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Názov APV</th>
            <th>Číslo APV</th>
            <th>Zákazkové číslo</th>
            <th>Spracovateľ</th>
            <th>Dátum vytvorenia</th>
            <th>Akcie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ConfigId</td>
                <td>@item.Apvname</td>
                <td>@item.Apvnumber</td>
                <td>@item.OrderNumber</td>
                <td>@item.Processor</td>
                <td>
                    @if (item.CreatedDate.HasValue)
                    {
                        @item.CreatedDate.Value.ToString("dd.MM.yyyy")
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                @if (User.IsInRole("Technician"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-configId="@item.ConfigId" class="btn btn-warning btn-action btn-edit">Upraviť</a>
                        <a asp-action="Delete" asp-route-configId="@item.ConfigId" class="btn btn-danger btn-action btn-delete">Vymazať</a>
                        <a asp-action="Detail" asp-route-configId="@item.ConfigId" class="btn btn-info btn-action btn-detail">Detail</a>
                   
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Detail" asp-route-configId="@item.ConfigId" class="btn btn-info btn-action btn-detail">Detail</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>