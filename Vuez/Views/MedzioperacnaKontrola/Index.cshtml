@model IEnumerable<vuez.Models.ConfigurationSheet>

<h1>Medzioperačná kontrola konfiguračných listov</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="Create" class="btn btn-success">+ Nový konfiguračný list</a>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Zoznam konfiguračných listov APV</h4>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Názov APV</th>
                                <th>Číslo APV</th>
                                <th>Zákazkové číslo</th>
                                <th>Dátum vytvorenia</th>
                                <th>Akcie</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ConfigId</td>
                                    <td>@item.Apvname</td>
                                    <td>@item.Apvnumber</td>
                                    <td>@item.OrderNumber</td>
                                    <td>@(item.CreatedDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                    <td>
                                        <a asp-action="Configlist" asp-route-configId="@item.ConfigId" class="btn btn-warning btn-sm">Upraviť</a>
                                        <a asp-action="Delete" asp-route-configId="@item.ConfigId" class="btn btn-danger btn-sm">Vymazať</a>
                                        <a asp-action="ExamRecord" asp-route-configId="@item.ConfigId" class="btn btn-info btn-sm">Detail</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Neboli nájdené žiadne konfiguračné listy. Model je @(Model == null ? "null" : "not null") a má @(Model?.Count() ?? 0) položiek.
                    </div>
                }
            </div>
        </div>
    </div>
</div>