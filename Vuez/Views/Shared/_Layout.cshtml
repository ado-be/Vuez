                    text-align: left;
                    color: #6c757d;
                }

            .modern-table-responsive .actions-column {
                justify-content: flex-end;
                margin-top: 0.5rem;
            }

            .btn-action {
                margin-bottom: 0.25rem;
            }
        }

     
