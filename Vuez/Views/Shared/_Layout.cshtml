        }

            .btn-create:hover {
                background-color: #0069d9;
            }

      
        .content-card-header .btn-create {
            margin-left: auto;
        }

.btn i {
    margin-right: 0.5rem;
}


.form-group .btn {
    margin-top: 1rem;
}

    @@media (max-width: 767.98px) {
    .btn-action {
        margin-bottom: 0.25rem;
    }
}

      
