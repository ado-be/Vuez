@model IEnumerable<vuez.Models.VstupnaKontrola>

<h2>Zoznam vstupných kontrol</h2>

<a asp-action="Create" class="btn btn-success">+ Nová kontrola</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Názov výrobku</th>
            <th>Dodávateľ</th>
            <th>Zákazkové číslo</th>
            <th>Akcie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var chybaManager = string.IsNullOrEmpty(item.PodpisManagerUrl);
            var chybaTechnik = string.IsNullOrEmpty(item.PodpisTechnikUrl);
            var tooltipText = "";
            if (chybaManager && chybaTechnik)
            {
                tooltipText = "Chýba podpis manažéra a technika";
            }
            else if (chybaManager)
            {
                tooltipText = "Chýba podpis manažéra";
            }
            else if (chybaTechnik)
            {
                tooltipText = "Chýba podpis technika";
            }

            <tr>
                <td>
                    @item.Id
                    @if (chybaManager || chybaTechnik)
                    {
                        <span title="@tooltipText" style="color: red; font-weight: bold; margin-left: 5px;">&#9888;</span> <!-- výkričník -->
                    }
                </td>
                <td>@item.NazovVyrobku</td>
                <td>@item.Dodavatel</td>
                <td>@item.ZakazkoveCislo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-action btn-edit">Upraviť</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action btn-delete">Vymazať</a>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-action btn-detail">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>
